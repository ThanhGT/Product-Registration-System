@model ProductListViewModel

@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product Page</title>
    <link href="~lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="p-1">
    @*Display each Product from the database*@
    @foreach (var item in Model.Products)
    {
        <div class="card card-title m-1 p-1">
            <div class="bg-light p-1">
                <h4>
                    @item.ProductName
                    <span class="badge badge-pill badge-primary" style="float:right">
                        <small>@item.Price.ToString("c")</small>
                    </span>
                </h4>
            </div>
            <span class="card-text p-1">
                Category ID: @item.CategoryId<br />
                Product ID: @item.ProductId
                <button class="btn btn-success btn-sm pull-right" style="float:right" type="submit">Remove</button>
                <button class="btn btn-success btn-sm pull-right" style="float:right" type="submit">Update</button>
            </span>
        </div>
    }

    <div page-model="@Model.PageInfo" page-action="ProductSummary" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary" class="btn-group pull-right m-1">
    </div>

    <div class="text-center">
        <a class="btn btn-primary" asp-action="ProductForm">Add Product</a>
        <a class="btn btn-primary" asp-action="CategoryForm">Add Category</a>
        <a class="btn btn-secondary" asp-action="Index">Home</a>
    </div>
</body>
</html>